{
  "name": "@olivercaine/ultimate-app-spike",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "clean": "rimraf {apps,packages}/**/{node_modules,dist,.next,.turbo} -g && rimraf node_modules",
    "prepare": "husky install",
    "install:docker": "docker run --rm -w /app -v ${PWD}:/app --expose 7000 -p 6006:6006 -p 3000:3000 $(docker build . -q) sh -c 'pnpm install && pnpm build'"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "commitizen": "^4.3.0",
    "husky": "9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "turbo": "^2.0.6",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@8.15.3",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "vitest related --run --bail",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier -w"
    ]
  }
}
